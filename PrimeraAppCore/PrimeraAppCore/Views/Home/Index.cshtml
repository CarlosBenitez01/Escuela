@model PrimeraAppCore.Models.ViewModel.CourseViewModel
@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/estilo.css">
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="form-header">
    <h1><i class="fas fa-book animate__animated animate__rubberBand"></i> Course</h1>
</div>
<div class="contenedor animate__animated animate__jello ">

    @using (Html.BeginForm("Insert", "Home"))
    {
        @Html.LabelFor(m => m.Title, new { @class = "label" })
        @Html.TextBoxFor(m => m.Title, new { @class = "input", @placeholder = "Title" })
        @Html.ValidationMessageFor(m => m.Title)


        @Html.LabelFor(m => m.Credits, new { @class = "label" })
        @Html.TextBoxFor(m => m.Credits, new { @class = "input", Type = "number", @placeholder = "Credits" })
        @Html.ValidationMessageFor(m => m.Credits)

        <input type="submit" class="button" value="Insertar  >">
    }
</div>

